# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# TODO /api prefix for all REST endpoints

# Templates
GET     /templates                          @de.frosner.broccoli.controllers.TemplateController.list
GET     /templates/:id                      @de.frosner.broccoli.controllers.TemplateController.show(id: String)

# Instances
GET     /instances                          @de.frosner.broccoli.controllers.InstanceController.list(templateId: Option[String])
GET     /instances/:id                      @de.frosner.broccoli.controllers.InstanceController.show(id: String)
PUT     /instances                          @de.frosner.broccoli.controllers.InstanceController.create

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       @controllers.Assets.versioned(path="/public", file)

# Map root path to UI
GET     /                                   @controllers.Assets.at(path="/public", file="index.html")
